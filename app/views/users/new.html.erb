<h1>Sign Up</h1>

<%= form_for :user, url:'/users'  do |form| %>

  <div class="form-group">
    <%= form.label :first_name, "First Name" %>
    <%= form.text_field :first_name, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Last Name"  %>
    <%= form.text_field :last_name, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class: 'form-control', style: 'width:300px' %>
  </div>

  <%= form.submit 'Register', class: 'btn btn-primary' %>
<% end %>