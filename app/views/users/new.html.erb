<h1>Sign Up</h1>

<% flash.each do |type, msg| %>
  <div class="alert alert-danger alert-dismissible">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<%= form_for :user, url:'/users'  do |form| %>

  <div class="form-group">
    <%= form.label :first_name, "First Name" %>
    <%= form.text_field :first_name, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Last Name"  %>
    <%= form.text_field :last_name, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control', style: 'width:300px' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'form-control', style: 'width:300px' %>
  </div>

  <%= form.submit 'Register', class: 'btn btn-primary' %>
<% end %>