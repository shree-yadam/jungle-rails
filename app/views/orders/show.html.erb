<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="3" scope="col" class="h4" >Items</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Item Total</th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each_with_index do |item, index| %>
            <%= render 'line_item', item_num: index + 1, product: item.product, quantity: item[:quantity].to_i, item_price_cents: item[:item_price_cents], total_price_cents: item[:total_price_cents] %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="5">
              TOTAL:
            </th>
            <th>
              <%= humanized_money_with_symbol @order.total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
    <h4>email: <%= @order.email %></h4>
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
